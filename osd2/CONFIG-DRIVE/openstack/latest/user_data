 - parted -s /dev/vdb mkpart primary 0% 33%
 - parted -s /dev/vdb mkpart primary 34% 66%
 - parted -s /dev/vdb mkpart primary 67% 100% 
 - ntpdate 0.debian.pool.ntp.org
